{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "**/package.json",
      ".expo",
      "scripts/**/*.js",
      "expo-env.d.ts",
      "__snapshots__/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
